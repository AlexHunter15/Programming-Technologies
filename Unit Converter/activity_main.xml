<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/inputValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите значение"
        android:inputType="numberDecimal" />

    <RadioGroup
        android:id="@+id/unitGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/optionMetersToFeet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Метры в футы" />


        <RadioButton
            android:id="@+id/optionFeetToMeters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Футы в метры" />

        <RadioButton
            android:id="@+id/optionMetersToInches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Метры в дюймы" />

        <RadioButton
            android:id="@+id/optionInchesToMeters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дюймы в метры" />

        <RadioButton
            android:id="@+id/optionMetersToYards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Метры в ярды" />

        <RadioButton
            android:id="@+id/optionYardsToMeters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ярды в метры" />
    </RadioGroup>

    <Button
        android:id="@+id/convertButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Преобразовать"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/outputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Результат будет здесь"
        android:layout_marginTop="16dp"
        android:textSize="16sp" />
    <Button
        android:id="@+id/historyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="История"
        android:layout_marginTop="16dp" />
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/im"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</LinearLayout>
